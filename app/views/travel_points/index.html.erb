<h1>Listing travel_points</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Serial</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travel_points.each do |travel_point| %>
      <tr>
        <td><%= travel_point.day_id %></td>
        <td><%= travel_point.serial %></td>
        <td><%= travel_point.longitude %></td>
        <td><%= travel_point.latitude %></td>
        <td><%= travel_point.name %></td>
        <td><%= link_to 'Show', travel_point %></td>
        <td><%= link_to 'Edit', edit_travel_point_path(travel_point) %></td>
        <td><%= link_to 'Destroy', travel_point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Travel point', new_travel_point_path %>
