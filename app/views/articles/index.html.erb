<h1>Listing articles</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Point</th>
      <th>Serial</th>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.travel_point_id %></td>
        <td><%= article.serial %></td>
        <td><%= article.name %></td>
        <td><%= article.content %></td>
        <td><%= link_to "Pictures (#{article.pictures.count})", article_pictures_path(article) %><td>
        <td><%= link_to 'Edit', edit_travel_point_article_path(@travel_point, article) %></td>
        <td><%= link_to 'Destroy', travel_point_article_path(@travel_point, article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_travel_point_article_path(@travel_point) %>
