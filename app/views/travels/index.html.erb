<h1>Listing travels</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.date.to_date.to_s(:db) %></td>
        <td><%= travel.name %></td>
        <td><%= travel.description %></td>
        <td><%= travel.photo_id %></td>
        <td><%= link_to "Days (#{travel.days.count})", travel_days_path(travel)%></td>

        <td><%= link_to 'Show', travel %></td>
        <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
        <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Travel', new_travel_path %>
